<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ctf.EmbeddedSecretStrings">


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kanit_regular"
            android:text="Embedded Secrets"
            android:textColor="#000"
            android:textSize="27sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/kanit_regular"
            android:paddingLeft="16dp"
            android:text="Hint: "
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/kanit_regular"
            android:paddingLeft="16dp"
            android:text="Developer sometimes leave secret codes within an application for easy accesss"
            android:textColor="#bfbfbf"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/folder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/secure" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/folder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kanit_regular"
        android:padding="16dp"
        android:text="Use your PIN to unlock secret folder"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="360dp"
        android:layout_height="195dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_green"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextSecretPin"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:fontFamily="@font/kanit_regular"
            android:hint=" Enter PIN"
            android:inputType="number"
            android:paddingLeft="11dp"
            android:paddingRight="12dp"
            android:textSize="17dp" />


        <Button
            android:id="@+id/buttonUnlock"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/rectangle_yellow"
            android:fontFamily="@font/kanit_regular"
            android:onClick="grantUserAccess"
            android:text="Unlock Folder"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="14dp" />


    </LinearLayout>


</RelativeLayout>